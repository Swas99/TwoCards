<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item  >
        <shape android:shape="oval"
            >
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                />
            <size android:width="90dp" android:height="90dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"
            >
            <stroke android:width="3dp" android:color="#498CFF"/>
            <padding android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                />
            <size android:width="90dp" android:height="90dp"/>
        </shape>
    </item>



    <item >
        <shape android:shape="oval">

            <gradient
                android:angle="135"
                android:endColor="#95BCFF"
                android:startColor="#4A8BFF"
                />
            <padding
                android:bottom="6dp"
                android:left="4dp"
                android:right="5dp"
                android:top="4dp"
                />

            <size android:width="90dp" android:height="90dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="oval">

            <solid android:color="#11FFFFFF"
                />
        </shape>
    </item>


</layer-list>