<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="oval"
            >
            <gradient
                android:angle="45"
                android:endColor="#FFFFFF"
                android:startColor="#09FFFFFF"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <stroke android:width="1.2dp" android:color="#FFFFFF"/>

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <item >
        <bitmap android:src="@drawable/img_quest"/>
    </item>
</layer-list>