<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_background_portrait"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp"
        android:minHeight="118dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09FFFFFF"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvHeader_1"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Howdy"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:id="@+id/coinSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ivCoins"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/coin"/>
                <TextView
                    android:id="@+id/tvCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_toLeftOf="@+id/ivCoins"
                    android:layout_toStartOf="@+id/ivCoins"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:typeface="sans"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/title_secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#09FFFFFF">
            <TextView
                android:id="@+id/firstContainer_SecondRow"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/secondContainer_SecondRow"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvHeader_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:minHeight="27dp"
                android:padding="5dp"
                android:text="Howdy"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title_thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#19FFFFFF"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvHeader_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Challenge Reward"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/btn_white"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Accept"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/btnDecline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_white"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Decline"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainButtons"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnQuickGame"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_quick_game"
                android:gravity="center"
                android:onClick="myClickHandler"
                android:text="Quick Game"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentTop="true"/>
            <Button
                android:id="@+id/btnArcade"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_arcade"
                android:onClick="myClickHandler"
                android:text="Arcade"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/btnGameLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/btn_game_logo"
            android:clickable="true"
            android:onClick="myClickHandler"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="2dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="23sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="CARDS"
                android:textColor="@color/black"
                android:textSize="23sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStoryMode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_story_mode"
                android:onClick="myClickHandler"
                android:text="  Story Mode"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/btnTimeTrial"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_time_trial"
                android:onClick="myClickHandler"
                android:text="Time Trial"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/optionButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnHelp"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_oval_sky_blue"
                        android:onClick="myClickHandler"
                        android:text="@string/help_symbol"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnStore"
                        android:layout_width="66dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/btn_oval_sky_blue"
                        android:onClick="myClickHandler"
                        />
                    <Button
                        android:id="@+id/btn_store"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/btn_store"
                        android:onClick="myClickHandler"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnTopScores"
                        android:layout_width="66dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/btn_oval_sky_blue"
                        android:onClick="myClickHandler"
                        />
                    <Button
                        android:id="@+id/btn_topScores"
                        android:layout_width="31dp"
                        android:layout_height="29dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/btn_top_scores"
                        android:onClick="myClickHandler"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_oval_sky_blue"
                        android:onClick="myClickHandler"
                        />
                    <Button
                        android:id="@+id/btn_settings"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_settings"
                        android:onClick="myClickHandler"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="7dp"
                        android:layout_marginEnd="7dp"
                        >
                        <Button
                            android:id="@+id/btnRating"
                            android:layout_width="55dp"
                            android:layout_height="36dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_oval_sky_blue"
                            android:onClick="myClickHandler"
                            />
                        <Button
                            android:id="@+id/btn_rating"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_rating"
                            android:onClick="myClickHandler"
                            />

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnFb"
                        android:layout_width="55dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/btn_oval_sky_blue"
                        android:onClick="myClickHandler"
                        />
                    <Button
                        android:id="@+id/btn_fb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/btn_fb"
                        android:onClick="myClickHandler"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        >
                        <Button
                            android:id="@+id/btnShare"
                            android:layout_width="55dp"
                            android:layout_height="36dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_oval_sky_blue"
                            android:onClick="myClickHandler"
                            />
                        <Button
                            android:id="@+id/btn_share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_share"
                            android:onClick="myClickHandler"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:background="@drawable/btn_rectangle_sky_blue"
            android:onClick="myClickHandler"
            android:text="Exit"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</LinearLayout>


