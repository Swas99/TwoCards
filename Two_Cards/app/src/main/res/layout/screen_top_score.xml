<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen_topScores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_portrait"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#36FFFFFF"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_prev_page"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/btn_prev_page"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Top Scores"
                android:textColor="@color/black"
                android:textSize="36sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-5dp"
                android:background="#A1000000"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_next_page"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/btn_next_page"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:background="#18FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Board Details"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_transparent_60"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:baselineAligned="false">
                <Button
                    android:id="@+id/GameMode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="4"
                    android:background="@drawable/btn_white_transparency_20"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnGameMode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>
                <Button
                    android:id="@+id/CardSet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="4"
                    android:background="@drawable/btn_white_transparency_20"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnCardSet"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:padding="2dp">
                <Button
                    android:id="@+id/PlayerMode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="4"
                    android:background="@drawable/btn_white_transparency_20"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnPlayerMode"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>
                <SeekBar
                    android:id="@+id/RobotMemory"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:max="9"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:baselineAligned="false">
                <Button
                    android:id="@+id/BoardType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="4"
                    android:background="@drawable/btn_white_transparency_20"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnBoardType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>

                <Button
                    android:id="@+id/ScrollType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="4"
                    android:background="@drawable/btn_white_transparency_20"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnScrollType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_marginBottom="3dp"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/RowSize"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".3"
                    android:background="@drawable/btn_white_transparency_20"
                    android:gravity="center"
                    android:onClick="myClickHandler"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="x"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/ColSize"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".3"
                    android:background="@drawable/btn_white_transparency_20"
                    android:gravity="center"
                    android:onClick="myClickHandler"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/btnBoardSize"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/ic_action_edit"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnShareScore"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_rectangle_sky_blue"
                        android:gravity="center"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background = "@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white_transparent_20">
            <TextView
                android:id="@+id/tvUserScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Your Top Score = 123123"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:id="@+id/region_leader_board_custom_game">
                <Button
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_gs_top_scores"
                    android:id="@+id/btn_leader_board_custom_game"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:text="Check\nLeader-board"
                    android:id="@+id/tv_leader_board_custom_game"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="*Only games won by you are considered"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="**Games where power is used are not considered"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_transparent_60"/>
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Top scores"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_transparent_60"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1."
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerName_1"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Player"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvPlayerScore_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Score"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#28FFFFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="2."
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerName_2"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvPlayerScore_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#28FFFFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="3."
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerName_3"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerScore_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#28FFFFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4."
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerName_4"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvPlayerScore_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#28FFFFFF"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="5."
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tvPlayerName_5"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvPlayerScore_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#28FFFFFF"/>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/btnResetScores"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
                android:layout_margin="3dp"
                android:background="@drawable/btn_rectangle_sky_blue"
                android:gravity="center"
                android:padding="5dp"
                android:text="Reset"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
        </RelativeLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="2dp">
        <RelativeLayout
            android:id="@+id/btnExit"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:clickable="true"
            android:background="@drawable/btn_rectangle_sky_blue">
            <Button
                android:id="@+id/btn_exit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_home"
                android:clickable="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:background="@drawable/btn_rectangle_sky_blue"
            android:onClick="myClickHandler"
            android:clickable="true"
            android:visibility="invisible">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/img_home"
                android:onClick="myClickHandler"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnStore"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:clickable="true"
            android:background="@drawable/btn_rectangle_sky_blue"
            >
            <Button
                android:id="@+id/btn_store"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_store"
                />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>